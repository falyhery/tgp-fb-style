<h1>Potins</h1>

<% @gossips.each do |gossip| %>
    <h2><%= gossip.title %></h2>
    <p><%= gossip.content %></p>
<p>
    <a href="<%= gossip_path(gossip.id) %>" class="btn btn-primary">Découvrir le potin</a>
    <a href="<%= edit_gossip_path(gossip.id) %>" class="btn btn-default">Editer</a>
    <a href="<%= gossip_path(gossip.id)" class="btn btn-danger" data-confirm="êtes-vous sûr ?" data-method="DELETE">Supprimer</a>
</p>
<% end %>

<p>
    < a href="<%= new_gossip_path %>" class="btn btn-success">Créer un potin</a>
</p>